FROM nixos/nix:latest
  
  WORKDIR /app
  
  RUN nix-env -iA nixpkgs.linuxPackages.perf
  RUN nix-env -iA nixpkgs.nim
  
  COPY ./benchmarks ./benchmarks
  COPY ./docker/runners/run.nim.sh ./run.sh
  # VOLUME ./results /app/results
  
  ENV LANG nim
  
  # ENTRYPOINT ["sh"]
  ENTRYPOINT ["sh", "run.sh"]